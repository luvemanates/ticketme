This is the search page.


<%= form_with :url => {:action => 'create', :controller => 'search'} do |form| %>
  <%= form.label :search_params, style: "display: block" %>
  <%= form.text_field :posted_search_params, :value => @search_params %>
  <%= form.text_field :posted_page, :value => @page %>
  <%= form.submit 'Search' %>
<% end %>
<br/>

<% i = 1 %>
<% for ticket in @tickets %>
  <%= render 'tickets/ticket', :ticket => ticket, :current_ticket_count => i %>
  <br/>
  <% i = i + 1 %>
<% end %>
<%= will_paginate @tickets %>
