<p style="color: green"><%= notice %></p>

<h1>Tickets</h1>

<div id="tickets">
  <% @tickets.each do |ticket| %>
    <%= render ticket, :current_ticket_count => ticket.id %>
    <div class="bcc_btn_container">
      <%= button_to "BCC: this ticket", ticket_bcc_path(ticket), method: :put, :class => "bcc_ticket" %>
    </div>
    <div class="show_comment_container">
      <%= button_to "Show comments", ticket_path(ticket), :method => :get, :class => 'btn' %>
    </div>
    <div class="ticket-seperator">
      &nbsp;
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= button_to "Log Out", destroy_user_session_path, :method => 'delete' %>
<% else %>
  <%= link_to "Log in", new_user_session_path %>
<% end %>
<br/>
<%= link_to "New ticket", new_ticket_path %>
<%= link_to "search", { :action => 'show', :controller => 'search', :search_params => 'blah', :page => 1} %>

<%= will_paginate @tickets %>
