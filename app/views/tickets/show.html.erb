<p style="color: green"><%= notice %></p>

<%= render @ticket, :current_ticket_count => @ticket.id %>
<div>
  <%= link_to "Make a ticket based on this ticket", edit_ticket_path(@ticket) %> |
  <%= link_to "Back to tickets", tickets_path %>

  <!--  <%= button_to "Destroy this ticket", @ticket, method: :delete, :class => "delete-ticket" %> -->
</div>
<%= link_to "Leave a comment", new_ticket_comment_path(:ticket_id => @ticket.id) %>
<div>
  <% for ticket_comment in @ticket_comments do %>
    <%= render ticket_comment, :partial => 'ticket_comment/_ticket_comment' %>
  <% end %>
</div>
