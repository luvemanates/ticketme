<a href="<%= ticket_path(ticket) %>" class="table-show-ticket">
  <div class="show-ticket-container <%= ticket_color(current_ticket_count) %>">
    <table id="<%= dom_id ticket %>" class="show-ticket">
      <thead>
        <th colspan="2"></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td colspan="1" class="ticket-to">
            <strong>Ticket to:</strong><br/>
            <%= link_to ticket.ticket_to, tallybytto_ticket_path(ticket)  %>
          </td>
          <td class="ticket-from" colspan="1">
            <strong>Ticket from:</strong><br/>
            <%= ticket.ticket_from %>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="ticket-description">
            <strong>Description:</strong><br/>
            <%= ticket.description %>
          </td>
        </tr>
        <tr>
          <td colspan="1">
            <strong>Cbc amount:</strong><br/>
            <% if ticket.cbc_amount.to_f < 1 %>
              <%= Float::INFINITY  %>
            <% else %>
              <%= number_to_currency(ticket.cbc_amount) %>
            <% end %>
          </td>
          <td colspan"1" >
            <strong>Created At:</strong>
            <br/>
            Ticket since <%= time_ago_in_words(ticket.created_at) %> ago
          </td>
        <tr>
          <td colspan="1">
            <strong>Creator:</strong><br/>
            <%= link_to ticket.creator.email, tallybytcreator_ticket_path(ticket)  %>
          </td>
          <td colspan="1">
            <strong>Category:</strong><br/>
            <%= ticket.category_id %>
          </td>
        </tr>
        <tr>
          <td colspan="1">
          </td>
          <td colspan="1">
            <strong>Rank:</strong><br/>
            <%= link_to ticket.rank, ticket_users_path(ticket.id) %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="tape_<%= ticket_tape_version(current_ticket_count) %>">
  </div>
</a>
